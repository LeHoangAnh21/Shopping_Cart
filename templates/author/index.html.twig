{% extends 'base.html.twig' %}

{% block title %} Author management {% endblock %}

{% block body %}

    <nav class="container">
        <div class="grid wide">
            <div class="row sm-gutter container__shorter">
                
                <div class="col l-2">
                    <div class="container__category">
                        <div class="container__category-header">
                            <i class="container__category-header-logo fas fa-list"></i>
                            <span class="container__category-header-item">List Author</span>
                        </div>
                        <ul class="container__category-list">
                            <li class="container__category-list-item container__category-list-arrow">
                                <a href="" class="container__category-item-link">ALL AUTHOR</a>
                            </li>
                            <li class="container__category-list-item">
                                <a href="" class="container__category-item-link">FAVORITE  AUTHOR</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col l-10">
                    <div class="home__filter hide-on-tablet-mobile">
                        <span class="home__filter-lable">Sorted by...</span>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="btn btn--primary home__filter-button" href="{{ path('author_add')}}">ADD</a>
                        {% endif %}
						<a class="btn btn--primary home__filter-button" href="{{ path('book_index')}}">Book List</a>
						<a class="btn home__filter-button" href="{{ path('homepage')}}">Home</a>
                    </div>

                    <div class="home__product">
                        <div class="row sm-gutter">
                            <!-- item -->
                            {% for author in authors %}
                                <div class="col l-2-4">
                                    <a class="home__product-item" href="{{ path('author_detail', {'id': author.id}) }}">
                                        <div class="home__product-item-img" style="background-image: url({{asset('images/author/'~author.image)}}">
                                            
                                        </div>
                                        <div class="home__product-item-info">
                                            <div class="home__product-item-name">
                                                Author:
                                                {{author.name}}
                                            </div>

                                            <div class="home__product-item-name">
                                                {{author.nationality}}
                                            </div>

                                            <div class="home__product-item-price">
                                                <div class="home__product-rating-like">
                                                    <i class="fas fa-heart" style="color: red"></i>
                                                </div>
                                            </div>	
                                        </div>

                                        <div class="home__product-favorite">
                                            <span class="home__product-favorite-love">Favorite</span>
                                        </div>
                                    </a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

{% endblock %}
